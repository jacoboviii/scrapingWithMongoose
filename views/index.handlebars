{{#each articles}}
    <div class="card mx-auto mb-3" style="width: 40rem;">
        <div class="row card-header m-0">
            <div class="col-sm-8 col-md-8">
                <h3>{{title}}</h3>
            </div>
            <div class="col-sm-8 col-md-4">
                <fieldset>
                    <button type="button" class="btn btn-danger float-right delete-article" data-id="{{_id}}">Delete Article</button>
                </fieldset>
            </div>
        </div>
        <div class="card-body">
            <a href="{{link}}">{{link}}</a>
            <br>
            <br>
            <img class="rounded img-thumbnail" src="{{image}}" alt="Image not available">
            <hr>
            <h5 class="card-text">Comments</h5>
            <ul class="list-group">
            {{#each comments}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{body}}
                    <button type="button" class="btn btn-danger float-right delete-comment" data-id="{{_id}}">Delete Comment</button>
                </li>
            {{/each}}
            </ul>
        </div>
        <form class="p-3" method="POST" action="articles/{{_id}}">  
            <div class="form-group">
            <label for="body">Leave a comment</label>
            <textarea class="form-control" name="body" id="body" rows="3" spellcheck="true" style="z-index: auto; position: relative; line-height: 24px; font-size: 16px; transition: none; background: none 0% 0% / auto repeat scroll padding-box padding-box rgba(0, 0, 0, 0);"></textarea>
            </div>
            <fieldset>
                <button type="submit" class="btn btn-primary">Submit Comment</button>
            </fieldset>
        </form>
    </div> 
    <br>
{{/each}}
